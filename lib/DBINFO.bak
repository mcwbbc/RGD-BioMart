################################################
# Edit this information for your configuration #
################################################


my $mysqlHost = '';#mySql db host
my $mysqlPort = '3306';#Usually 3306 for mySQL databases
my $mysqlUser = '';#Enter your user name
my $mysqlPwd = '';#Password for the above user

my $oracleHost = '';#oracle db host
my $oraclePort = '';#Usually 1521 for Oracle databases
my $oracleUser = '';#Enter your user name
my $oraclePwd = '';#Password for the above user

###############################
# End of information required #
###############################

#MySql
sub getMySqlHost
{  return $mysqlHost;  }

sub getMySqlPort
{  return $mysqlPort;  }

sub getMySqlUser
{  return $mysqlUser;  }

sub getMySqlPwd
{  return $mysqlPwd;   }

#Oracle
sub getOracleHost
{  return $oracleHost;  }

sub getOraclePort
{  return $oraclePort;  }

sub getOracleUser
{  return $oracleUser;  }

sub getOraclePwd
{  return $oraclePwd;   }

1;
